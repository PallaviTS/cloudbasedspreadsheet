<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <h2>Change your password</h2>
                <hr class="colorgraph">

                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>

                <div class="field">
                    <%= f.label :password, "New password" %><br />
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-lg" %>
                </div>

                <div class="field">
                    <%= f.label :password_confirmation, "Confirm new password" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
                </div>
                <hr class="colorgraph">
                <div class="row">
			              <div class="col-xs-6 col-sm-6 col-md-6 actions">
                        <%= f.submit "Change my password",class: "btn btn-lg btn-success btn-block" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
